<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#EAE9E9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="10dp"
        android:background="@color/white"
        android:layout_marginBottom="10dp"
        >
        <TextView
            android:id="@+id/whatTypeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내방볼래?"
            android:gravity="center"
            android:textSize="13dp"
            android:fontFamily="@font/a15"
            android:textColor="@color/more_light_coral"
            android:layout_marginHorizontal="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="5dp"
            android:paddingHorizontal="5dp"
            android:padding="5dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/memberImageView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="5dp"/>

            <TextView
                android:id="@+id/memberIdTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:text="mike95613"
                android:fontFamily="@font/a9"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_weight="1"/>

        </LinearLayout>

        <TextView
            android:id="@+id/roomTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:textSize="13sp"
            android:fontFamily="@font/a9"
            android:textColor="#B1B1B1"
            android:gravity="center"/>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/homeImageViewPager"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center" />

        <me.relex.circleindicator.CircleIndicator
            android:id="@+id/indicator"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            app:ci_drawable="@drawable/ic_baseline_circle_24"
            app:ci_height="4dp"
            app:ci_margin="4dp"
            app:ci_width="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp">

            <ImageView
                android:id="@+id/likeImageView"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="5dp"
                android:backgroundTint="@color/white"
                android:src="@drawable/ic_baseline_favorite_border_24" />

            <TextView
                android:id="@+id/likeNumTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:text="0"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/commentImageView"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="5dp"
                android:backgroundTint="@color/white"
                android:src="@drawable/ic_outline_mode_comment_24" />

            <TextView
                android:id="@+id/commentNumTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0"
                android:textSize="13sp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1" />

        </LinearLayout>

        <TextView
            android:id="@+id/messageTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="7dp"
            android:textSize="14sp"
            android:fontFamily="@font/a18"
            android:text="안녕하세요 ㅎㅎㅎ"/>

        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="10dp"
            android:textSize="10sp" />
    </LinearLayout>




</LinearLayout>