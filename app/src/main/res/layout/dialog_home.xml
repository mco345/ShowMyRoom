<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/square_home"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/roomLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/square"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:background="@android:color/transparent"
                android:src="@drawable/room"
                app:civ_border_color="#3BFFFFFF"
                app:civ_border_overlay="true"
                app:civ_border_width="5dp" />

            <TextView
                android:id="@+id/roomTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="내 방 볼래?"
                android:fontFamily="@font/a18"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="한껏 꾸민 내 방을\n자랑해주세요!\n내 방을 공유하고\n사람들과 소통해보세요!"
                android:fontFamily="@font/a13"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dailyLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/square"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:background="@android:color/transparent"
                android:src="@drawable/daily"
                app:civ_border_color="#3BFFFFFF"
                app:civ_border_overlay="true"
                app:civ_border_width="5dp" />

            <TextView
                android:id="@+id/dailyTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="내 일상 볼래?"
                android:fontFamily="@font/a18"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="한껏 꾸민 내 방을\n자랑해주세요!\n내 방을 공유하고\n사람들과 소통해보세요!"
                android:textSize="12sp"
                android:fontFamily="@font/a13"/>

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/checkButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="확인"
        android:textSize="15sp"
        android:fontFamily="@font/a4"/>


</LinearLayout>
